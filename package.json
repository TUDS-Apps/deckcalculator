{
  "name": "deck-calculator",
  "version": "1.0.0",
  "description": "Deck framing calculator with visual layout",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:regression": "node --experimental-vm-modules node_modules/jest/bin/jest.js closingPointRegression",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "verbose": true
  }
}
